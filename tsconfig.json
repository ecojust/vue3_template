{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution":"Node",
    "strict": true,
    "jsx": "preserve",
    "paths": {
      "/@/*": ["./src/*"]
    },
    "lib": ["esnext", "dom", "dom.iterable", "scripthost"]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx"
  ],
  "exclude": ["node_modules"]
}
